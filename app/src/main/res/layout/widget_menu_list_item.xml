<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_list_item_height">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|left"
        android:id="@+id/title"
        android:gravity="center"
        android:text="hello"
        android:textAppearance="@style/NormalTextAppearance" />

    <ImageView
        android:layout_width="@dimen/app_list_item_icon"
        android:layout_height="@dimen/app_list_item_icon"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/bigger" />
</FrameLayout>