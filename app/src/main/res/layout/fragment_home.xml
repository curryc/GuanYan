<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:dividerPadding="20dp"
    android:orientation="vertical"
    android:padding="@dimen/app_padding_sml"
    android:showDividers="middle">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/app_padding_mid"
        android:layout_weight="2"
        android:text="@string/app_name"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/translate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/app_padding_mid"
        android:layout_weight="3"
        android:background="@drawable/round_rec"
        android:text="@string/word_trans" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/audio_trans"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/app_padding_mid"
            android:layout_weight="1"
            android:background="@drawable/round_rec"
            android:text="@string/audio_trans" />

        <Button
            android:id="@+id/floating_window"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/app_padding_mid"
            android:layout_weight="1"
            android:background="@drawable/round_rec"
            android:text="@string/float_trans" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:text="@string/common_words"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:src="@drawable/horizontal_line" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/app_padding_mid"
        android:layout_weight="12" />
</LinearLayout>