<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/button_round_dot"
    android:layout_gravity="center"
    android:background="@drawable/round_rec_variant">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/button_round_dot_title"
        android:textAppearance="@style/NormalTextAppearance"
        android:textSize="20sp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:text="文字信息"></TextView>
    <com.scu.guanyan.widget.RoundImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/button_round_dot_dot"
        android:layout_gravity="right|top"
        android:src="#ff0000"></com.scu.guanyan.widget.RoundImageView>
</FrameLayout>