<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="0dp"
    android:orientation="vertical"
    android:padding="@dimen/app_padding_sml">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/app_padding_mid"
        android:layout_weight="2"
        android:text="@string/setting"
        android:textSize="30sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/app_padding_sml"
        app:cardCornerRadius="@dimen/nav_height"
        android:layout_weight="16"
        android:elevation="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/nav_height"
                android:layout_marginBottom="@dimen/nav_height"
                android:layout_marginLeft="@dimen/app_padding_mid"
                android:layout_marginRight="@dimen/app_padding_mid"
                android:id="@+id/menu_list"
                android:orientation="vertical">
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7" />


</LinearLayout>