<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--ToolBar区域背景颜色-->

        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryVariant">@color/app_color</item>
        <item name="colorOnPrimary">@color/app_color</item>
        <item name="android:statusBarColor">@color/app_color</item>
        <!--api 21 可用 底部导航栏颜色-->
        <item name="android:navigationBarColor">@color/gray</item>
        <!--api 21 可用 各个控制控件的默认颜色-->
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!--带返回按键的活动-->
    <style name="BackAppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="titleTextColor">@color/black</item>

        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryVariant">@color/app_color</item>
        <item name="colorOnPrimary">@color/app_color</item>
        <!--页面背景色-->
<!--        <item name="android:windowBackground">@color/white</item>-->
        <!--api 21 可用 底部导航栏颜色-->
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustResize</item>
        <item name="android:navigationBarColor">@color/gray</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:statusBarColor">@color/app_color</item>
        <!--api 21 可用 各个控制控件的默认颜色-->
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--CollapsingToolbarLayout样式-->
    <style name="ToolBarTheme" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="statusBarScrim">@color/gray</item>
        <item name="contentScrim">@color/gray</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="NormalTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SmlTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="TitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">50sp</item>
        <item name="fontFamily">@font/lishu</item>
        <item name="android:textColor">@color/app_color_variant</item>
    </style>
    <style name="ButtonTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="NormalEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/app_color_variant</item>
        <item name="colorControlActivated">@color/app_color_variant</item>
    </style>

    <style name="AnimCenter" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/activity_in</item>
        <item name="android:windowExitAnimation">@anim/activity_out</item>
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
    <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
    <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    <item name="android:activityCloseEnterAnimation">@anim/slide_in_right</item>
    <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
</style>

    <style name="CenterDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!-- 标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 弹出和退出的动画-->
        <item name="android:windowAnimationStyle">@style/AnimCenter</item>
    </style>
</resources>