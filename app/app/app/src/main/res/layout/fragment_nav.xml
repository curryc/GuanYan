<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <com.scu.guanyan.widget.RoundImageView
            android:layout_width="@dimen/nav_button_size"
            android:layout_height="@dimen/nav_button_size"
            android:id="@+id/focus"
            android:src="@color/app_color"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="@dimen/nav_icon_size"
                android:layout_height="@dimen/nav_icon_size"
                android:layout_marginEnd="@dimen/nav_button_padding"
                android:layout_marginStart="@dimen/nav_button_padding"
                android:src="@drawable/user"
                android:visibility="visible"
                android:id="@+id/home"/>
        <ImageView
                android:layout_width="@dimen/nav_icon_size"
                android:layout_height="@dimen/nav_icon_size"
                android:layout_marginEnd="@dimen/nav_button_padding"
                android:layout_marginStart="@dimen/nav_button_padding"
                android:src="@drawable/video"
                android:visibility="visible"
                android:id="@+id/teach"/>
        <ImageView
                android:layout_width="@dimen/nav_icon_size"
                android:layout_height="@dimen/nav_icon_size"
                android:layout_marginEnd="@dimen/nav_button_padding"
                android:layout_marginStart="@dimen/nav_button_padding"
                android:src="@drawable/setting"
                android:visibility="visible"
                android:id="@+id/setting"/>
    </LinearLayout>
</FrameLayout>